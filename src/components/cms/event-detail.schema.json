{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/cms/event-detail.schema.json",
  "title": "Event Detail",
  "type": "object",
  "properties": {
    "title": {
      "title": "Event Title",
      "description": "Title of the event",
      "type": "string"
    },
    "categories": {
      "title": "Categories",
      "description": "Categories to which the event belongs",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "title": "Label",
            "description": "Label of the category"
          }
        }
      }
    },
    "intro": {
      "title": "Intro",
      "description": "Short intro text for the event",
      "type": "string"
    },
    "appointments": {
      "title": "Appointments",
      "description": "List of attendable appointments",
      "type": "array",
      "items": {
        "$ref": "http://schema.mydesignsystem.com/event-list-appointment.schema.json"
      }
    },
    "description": {
      "title": "Description",
      "description": "Description of the event",
      "type": "string",
      "format": "markdown"
    },
    "images": {
      "title": "Images",
      "description": "Images displayed below the text content",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "src": {
            "title": "Image source",
            "description": "Image source to use",
            "type": "string",
            "format": "image"
          },
          "alt": {
            "title": "Alt text",
            "description": "Image description",
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
