{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/nav-main.schema.json",
  "title": "Nav Main",
  "type": "object",
  "properties": {
    "logo": {
      "$ref": "http://schema.mydesignsystem.com/logo.schema.json"
    },
    "flyoutInverted": {
      "type": "boolean",
      "title": "Flyout Inverted",
      "description": "Toggle the inversion of the flyout navigation",
      "default": false
    },
    "dropdownInverted": {
      "type": "boolean",
      "title": "Dropdown Inverted",
      "description": "Toggle the inversion of the dropdown navigation",
      "default": false
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "href": { "type": "string", "format": "uri" },
          "label": { "type": "string" },
          "active": { "type": "boolean" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "href": { "type": "string", "format": "uri" },
                "id": { "type": "string" },
                "label": { "type": "string" },
                "active": { "type": "boolean" }
              }
            }
          }
        },
        "additionalProperties": false,
        "required": ["href", "label"]
      },
      "examples": [
        [
          {
            "label": "Navigation Item",
            "href": "#"
          },
          {
            "label": "Active Item",
            "href": "#",
            "active": true
          },
          {
            "label": "Item With Children",
            "href": "#",
            "items": [
              {
                "label": "Level 2 Item",
                "href": "#",
                "id": ""
              },
              {
                "label": "Another One",
                "href": "#",
                "id": ""
              }
            ]
          },
          {
            "label": "One more Item",
            "href": "#"
          },
          {
            "label": "Last Item",
            "href": "#"
          }
        ]
      ]
    },
    "cta": {
      "type": "object",
      "title": "CTA",
      "description": "Add a CTA to the Navigation",
      "properties": {
        "toggle": {
          "title": "Toggle CTA",
          "description": "Toggle the CTA",
          "type": "boolean",
          "default": false
        },
        "label": {
          "$ref": "http://schema.mydesignsystem.com/button.schema.json#/properties/label"
        },
        "target": {
          "$ref": "http://schema.mydesignsystem.com/button.schema.json#/properties/target"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": ["logo"]
}
