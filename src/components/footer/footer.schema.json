{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/footer.schema.json",
  "title": "Footer",
  "type": "object",
  "properties": {
    "logo": {
      "title": "Logo",
      "type": "object",
      "properties": {
        "src": {
          "title": "Source",
          "description": "Picture source",
          "type": "string",
          "format": "image",
          "examples": ["https://picsum.photos/seed/kdspicture/300/300"]
        },
        "alt": {
          "title": "Alt text",
          "description": "Alt text to display for picture",
          "type": "string"
        },
        "width": {
          "title": "Width",
          "description": "Width of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        },
        "height": {
          "title": "Height",
          "description": "Height of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        }
      },
      "additionalProperties": false
    },
    "logoHref": {
      "type": "string",
      "format": "uri",
      "default": "/"
    },
    "byline": {
      "title": "Byline",
      "description": "Small line of text displayed below the logo",
      "type": "string",
      "default": "Â© 2024 systemics Inc. All rights reserved."
    },
    "inverted": {
      "type": "boolean",
      "title": "Inverted",
      "description": "Invert the color scheme of the footer",
      "default": false
    },
    "navItems": {
      "$ref": "http://schema.mydesignsystem.com/nav-main.schema.json#/properties/items"
    }
  },
  "required": ["logo"],
  "additionalProperties": false
}
