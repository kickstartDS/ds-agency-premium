{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/logo.schema.json",
  "title": "Logo",
  "type": "object",
  "properties": {
    "src": {
      "title": "Source",
      "description": "Picture source",
      "type": "string",
      "format": "image"
    },
    "srcInverted": {
      "title": "Source",
      "description": "Picture source",
      "type": "string",
      "format": "image"
    },
    "inverted": {
      "type": "boolean",
      "title": "Inverted",
      "description": "Toggle wether the inverted or default version of the logo is being displayed"
    },
    "alt": {
      "title": "Alt text",
      "description": "Alt text to display for picture",
      "type": "string"
    },
    "width": {
      "title": "Width",
      "description": "Width of the picture",
      "type": "integer",
      "minimum": 0,
      "examples": [300]
    },
    "height": {
      "title": "Height",
      "description": "Height of the picture",
      "type": "integer",
      "minimum": 0,
      "examples": [300]
    },
    "homepageHref": {
      "type": "string",
      "format": "uri",
      "default": "/"
    }
  },
  "additionalProperties": false
}
