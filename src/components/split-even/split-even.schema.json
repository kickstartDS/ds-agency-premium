          },
          {
            "$ref": "http://schema.mydesignsystem.com/video-curtain.schema.json"
          }
        ]
      }
    },
    "secondComponents": {
      "type": "array",
      "title": "Second",
      "description": "Allowed components for the second half of the split layout",
      "items": {
        "anyOf": [
          {
            "$ref": "http://schema.mydesignsystem.com/cta.schema.json"
