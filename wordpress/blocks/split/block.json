{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "dsa/split",
  "version": "1.0.0",
  "title": "Split Layout",
  "category": "dsa-layout",
  "description": "Two-column layout with sidebar configuration",
  "textdomain": "ds-agency",
  "keywords": ["split", "columns", "sidebar", "layout"],
  "attributes": {
    "layout": {
      "type": "string",
      "enum": ["sidebarRight", "sidebarLeft"],
      "default": "sidebarRight"
    },
    "mainSectionWidth": {
      "type": "string",
      "enum": ["narrow", "medium", "wide"],
      "default": "medium"
    }
  },
  "supports": {
    "anchor": true,
    "className": true,
    "html": false,
    "align": ["wide", "full"],
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./index.css"
}
